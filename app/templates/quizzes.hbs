<div class="row">
  {{#each quizzes as |quiz index|}}
    <div class="col-md-4">
      <h3>{{quiz.title}}</h3>
      <div class="desc">
        {{quiz.description}}
      </div>
      {{colored-player-choice-button index=index text='Start quiz' onselect=(action 'selectQuiz' quiz)}}
    </div>
  {{/each}}
</div>

{{outlet}}
