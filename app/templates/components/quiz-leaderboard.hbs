<div id="topscore">
  {{#if arrangedContent.length}}
  <h3>{{title}}</h3>
  <hr>
  <div class="row">
    <div class="user leaderboard col-md-12">
      {{#each arrangedContent as |user index|}}
        <table class="animate" style="margin-top: {{flex-topmargin index 70}}px" data-anim={{index}}>
          <tr>
            <td width="64">
              <img class="avatar img-circle img-thumbnail" src="/images/guest.png" width="64" alt="Generic placeholder image">
            </td>
            <td class="name">
              {{#view classBinding="user.answered:userAnswered:userNotAnswered" userBinding="user"}} {{user.name}} {{/view}} <br />
            </td>
            <td class="points">
              {{#view classBinding="user.answered:userAnswered:userNotAnswered" userBinding="user"}} {{user.points}} {{/view}} <br />
            </td>
          </tr>
        </table>
      {{/each}}
    </div>
  </div>
  {{/if}}
</div>
