<div class="row">
  {{#each question.answers as |answer|}}
    <div class="col-md-12">
      {{#if answer.correct}}
        <button class="button correctButton resultButton">
          <div class="resultButtonFilling" style="width:{{answer.selectionPercentage}}%"></div>
          <div class="resultButtonText">{{answer.title}}</div>
        </button>
        <br>
      {{else}}
        {{#if answer.selected}}
          <button class="button wrongButton resultButton">
            <div class="resultButtonFilling" style="width:{{answer.selectionPercentage}}%"></div>
            <div class="resultButtonText">{{answer.title}}</div>
            </button><br>
        {{else}}
          <button class="button resultButton">
            <div class="resultButtonFilling" style="width:{{answer.selectionPercentage}}%"></div>
            <div class="resultButtonText">{{answer.title}}</div>
          </button><br>
        {{/if}}
      {{/if}}
    </div>
  {{/each}}
</div>
